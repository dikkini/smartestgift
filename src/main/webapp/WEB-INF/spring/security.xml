<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http pattern="/ext/bootstrap/img" security="none" />
	<http auto-config="true">
		<intercept-url pattern="/WEB-INF" access="ROLE_USER,ROLE_ANONYMOUS" />
		<intercept-url pattern="/admin/*" access="ROLE_ADMIN" />
		<anonymous username="guest" granted-authority="ROLE_ANONYMOUS" />

        <form-login login-page="/login.jsp" default-target-url="/" authentication-failure-url="/error-login"/>
        <logout logout-url="/logout" logout-success-url="/"/>
		<remember-me user-service-ref="authDAO"/>
	</http>

    <authentication-manager>
        <authentication-provider user-service-ref="authDAO">
            <password-encoder hash="md5"/>
        </authentication-provider>
    </authentication-manager>

</beans:beans>